<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vente Produit"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/characterPicture"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/characterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom du Produit"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/characterPicture"
        app:layout_constraintStart_toStartOf="@id/characterPicture"
        app:layout_constraintEnd_toEndOf="@id/characterPicture"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/characterPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Prix: 0.00 â‚¬"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/characterName"
        app:layout_constraintStart_toStartOf="@id/characterName"
        app:layout_constraintEnd_toEndOf="@id/characterName"
        android:layout_marginTop="8dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        app:layout_constraintTop_toBottomOf="@id/characterPrice"
        app:layout_constraintStart_toStartOf="@id/characterPrice"
        app:layout_constraintEnd_toEndOf="@id/characterPrice"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/characterDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description du Produit"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        app:layout_constraintStart_toStartOf="@id/ratingBar"
        app:layout_constraintEnd_toEndOf="@id/ratingBar"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonAcheter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ajouter au Panier"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/characterDescription"
        app:layout_constraintStart_toStartOf="@id/characterDescription"
        app:layout_constraintEnd_toEndOf="@id/characterDescription"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
